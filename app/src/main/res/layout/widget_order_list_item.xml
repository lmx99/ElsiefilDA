<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/orderNum"
        android:layout_width="@dimen/order_list_item_num_size"
        android:layout_height="@dimen/order_list_item_num_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:background="@drawable/bg_order_list_circle_red"
        android:gravity="center"
        android:textColor="@color/order_list_btn_textColor"
        android:text="3"/>

    <TextView
        android:id="@+id/orderInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/order_list_item_paddingLeft"
        android:layout_marginStart="@dimen/order_list_item_paddingLeft"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@id/orderNum"
        android:layout_toStartOf="@id/orderNum"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/orderNum"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:textColor="#9e9e9e"
        android:textSize="12sp"
        android:text="11:22"/>


    <TextView
        android:id="@+id/deliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderInfo"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginLeft="@dimen/order_list_item_paddingLeft"
        android:layout_marginStart="@dimen/order_list_item_paddingLeft"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/order_list_btn_paddingX"
        android:paddingRight="@dimen/order_list_btn_paddingX"
        android:paddingTop="@dimen/order_list_btn_paddingY"
        android:paddingBottom="@dimen/order_list_btn_paddingY"
        android:text="@string/btn_deliver"
        android:textSize="@dimen/order_list_btn_textSize"
        android:textColor="@color/order_list_btn_textColor"
        android:background="@drawable/bg_btn_order_list"/>

    <TextView
        android:id="@+id/receivedByAgent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderInfo"
        android:layout_toEndOf="@id/deliver"
        android:layout_toRightOf="@id/deliver"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:paddingLeft="@dimen/order_list_btn_paddingX"
        android:paddingRight="@dimen/order_list_btn_paddingX"
        android:paddingTop="@dimen/order_list_btn_paddingY"
        android:paddingBottom="@dimen/order_list_btn_paddingY"
        android:text="@string/btn_received_by_agent"
        android:textSize="@dimen/order_list_btn_textSize"
        android:textColor="@color/order_list_btn_textColor"
        android:background="@drawable/bg_btn_order_list"/>

    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderInfo"
        android:layout_toEndOf="@id/receivedByAgent"
        android:layout_toRightOf="@id/receivedByAgent"
        android:paddingLeft="@dimen/order_list_btn_paddingX"
        android:paddingRight="@dimen/order_list_btn_paddingX"
        android:paddingTop="@dimen/order_list_btn_paddingY"
        android:paddingBottom="@dimen/order_list_btn_paddingY"
        android:text="@string/btn_more"
        android:textSize="@dimen/order_list_btn_textSize"
        android:textColor="@color/order_list_btn_textColor"
        android:background="@drawable/bg_btn_order_list"/>


    <TextView
        android:id="@+id/detailsInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deliver"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"/>

    <View
        android:id="@+id/urgency_indicator"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"/>

    <View
        android:layout_width="20dp"
        android:layout_height="1dp"
        android:layout_toRightOf="@id/urgency_indicator"
        android:layout_toEndOf="@id/urgency_indicator"
        android:layout_below="@id/deliver"/>


</RelativeLayout>