<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:paddingRight="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/orderInfo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="12sp"/>


    <TextView
        android:id="@+id/orderNum"
        android:layout_width="@dimen/order_list_item_num_size"
        android:layout_height="@dimen/order_list_item_num_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_order_list_circle_red"
        android:gravity="center"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/orderNum"
        android:layout_marginTop="2dp"
        android:textColor="#9e9e9e"
        android:textSize="12sp"/>


    <TextView
        android:id="@+id/deliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderInfo"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:paddingLeft="@dimen/order_list_btn_paddingX"
        android:paddingRight="@dimen/order_list_btn_paddingX"
        android:paddingTop="@dimen/order_list_btn_paddingY"
        android:paddingBottom="@dimen/order_list_btn_paddingY"
        android:text="@string/btn_deliver"
        android:textSize="@dimen/order_list_btn_textSize"
        android:textColor="@color/order_list_btn_textColor"
        android:background="@drawable/bg_btn_order_list"/>

    <TextView
        android:id="@+id/receivedByAgent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderInfo"
        android:layout_toEndOf="@id/deliver"
        android:layout_toRightOf="@id/deliver"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:paddingLeft="@dimen/order_list_btn_paddingX"
        android:paddingRight="@dimen/order_list_btn_paddingX"
        android:paddingTop="@dimen/order_list_btn_paddingY"
        android:paddingBottom="@dimen/order_list_btn_paddingY"
        android:text="@string/btn_received_by_agent"
        android:textSize="@dimen/order_list_btn_textSize"
        android:textColor="@color/order_list_btn_textColor"
        android:background="@drawable/bg_btn_order_list"/>

    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderInfo"
        android:layout_toEndOf="@id/receivedByAgent"
        android:layout_toRightOf="@id/receivedByAgent"
        android:paddingLeft="@dimen/order_list_btn_paddingX"
        android:paddingRight="@dimen/order_list_btn_paddingX"
        android:paddingTop="@dimen/order_list_btn_paddingY"
        android:paddingBottom="@dimen/order_list_btn_paddingY"
        android:text="@string/btn_more"
        android:textSize="@dimen/order_list_btn_textSize"
        android:textColor="@color/order_list_btn_textColor"
        android:background="@drawable/bg_btn_order_list"/>


    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/time"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_alignBaseline="@id/more"
        android:text="@string/btn_detail"
        android:textColor="@color/order_list_detail_btn"
        android:textSize="12sp"
        android:background="@drawable/bg_order_list_btn_detail"/>


    <TextView
        android:id="@+id/detailsInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deliver"
        android:layout_marginTop="8dp"/>


</RelativeLayout>