<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boshu_backgroud_color"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:background="@color/top_bar_normal_bg"
        android:layout_height="46dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        >
        <include layout="@layout/commom_back_btn" />
        <TextView
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:textColor="@color/bottom_text_color_normal"
            android:textSize="18sp"
            android:text="修改个人信息"
            android:layout_height="46dp"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:id="@+id/bt_boshu_finish"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="完成"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            />


    </RelativeLayout>

    <ScrollView
        android:id="@+id/sl_boshu_editMessageNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="基本信息"
                    android:textColor="@color/boshu_textcolorkey" />

            </RelativeLayout>

            <include layout="@layout/commom__boshu_basemessage" />
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>