<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dp">
    <RelativeLayout
        android:id="@+id/rl_findFri"
        android:layout_width="59dp"
        android:layout_height="59dp">
        <com.boshu.customview.CircleImageView
            android:id="@+id/head_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/default_avatar"
            app:border_color="@color/white"
            app:border_width="0.0dp" />
        </RelativeLayout>

    <TextView
        android:id="@+id/find_nickname"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/rl_findFri"
        android:text="风一样的男子"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/rl_findFri"
        android:id="@+id/img_sex"
        android:src="@drawable/friend_man"
        android:layout_width="15dp"
        android:layout_height="15dp" />
    <TextView
        android:id="@+id/tv_find_hight"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/img_sex"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:text="169cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_find_school"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentRight="true"
        android:text="广东工业大学"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
