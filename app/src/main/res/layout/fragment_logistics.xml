<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:gravity="center"
        android:background="@color/main_color"
        android:text="@string/title_fragment_logistics"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_action_bar"/>

    <TextView
        android:id="@+id/schedule"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_logistics_btn_height"
        android:background="@drawable/bg_goto_btn"
        android:clickable="true"
        android:drawableEnd="@drawable/tab_logistics_selected"
        android:drawableLeft="@drawable/tab_logistics_selected"
        android:drawablePadding="@dimen/fragment_logistics_btn_drawablePadding"
        android:drawableRight="@drawable/tab_logistics_selected"
        android:drawableStart="@drawable/tab_logistics_selected"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_logistics_btn_drawablePadding"
        android:paddingRight="@dimen/fragment_logistics_btn_drawablePadding"
        android:text="@string/fragment_logistics_routine"
        android:textColor="@color/goto_btn_textColor"
        android:textSize="@dimen/fragment_logistics_btn_textSize" />

    <TextView
        android:id="@+id/myPosition"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_logistics_btn_height"
        android:background="@drawable/bg_goto_btn"
        android:clickable="true"
        android:drawableEnd="@drawable/tab_logistics_selected"
        android:drawableLeft="@drawable/tab_logistics_selected"
        android:drawablePadding="@dimen/fragment_logistics_btn_drawablePadding"
        android:drawableRight="@drawable/tab_logistics_selected"
        android:drawableStart="@drawable/tab_logistics_selected"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_logistics_btn_drawablePadding"
        android:paddingRight="@dimen/fragment_logistics_btn_drawablePadding"
        android:text="@string/fragment_logistics_my_position"
        android:textColor="@color/goto_btn_textColor"
        android:textSize="@dimen/fragment_logistics_btn_textSize" />

    <TextView
        android:id="@+id/occupationAuth"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_logistics_btn_height"
        android:background="@drawable/bg_goto_btn"
        android:clickable="true"
        android:drawableEnd="@drawable/tab_logistics_selected"
        android:drawableLeft="@drawable/tab_logistics_selected"
        android:drawablePadding="@dimen/fragment_logistics_btn_drawablePadding"
        android:drawableRight="@drawable/tab_logistics_selected"
        android:drawableStart="@drawable/tab_logistics_selected"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_logistics_btn_drawablePadding"
        android:paddingRight="@dimen/fragment_logistics_btn_drawablePadding"
        android:text="@string/fragment_logistics_job_auth"
        android:textColor="@color/goto_btn_textColor"
        android:textSize="@dimen/fragment_logistics_btn_textSize" />

    <TextView
        android:id="@+id/deliver_stat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_logistics_btn_height"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_goto_btn"
        android:clickable="true"
        android:drawableEnd="@drawable/tab_logistics_selected"
        android:drawableLeft="@drawable/tab_logistics_selected"
        android:drawablePadding="@dimen/fragment_logistics_btn_drawablePadding"
        android:drawableRight="@drawable/tab_logistics_selected"
        android:drawableStart="@drawable/tab_logistics_selected"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_logistics_btn_drawablePadding"
        android:paddingRight="@dimen/fragment_logistics_btn_drawablePadding"
        android:text="@string/fragment_logistics_deliver_stat"
        android:textColor="@color/goto_btn_textColor"
        android:textSize="@dimen/fragment_logistics_btn_textSize" />

    <TextView
        android:id="@+id/order_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_logistics_btn_height"
        android:background="@drawable/bg_goto_btn"
        android:clickable="true"
        android:drawableEnd="@drawable/tab_logistics_selected"
        android:drawableLeft="@drawable/tab_logistics_selected"
        android:drawablePadding="@dimen/fragment_logistics_btn_drawablePadding"
        android:drawableRight="@drawable/tab_logistics_selected"
        android:drawableStart="@drawable/tab_logistics_selected"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_logistics_btn_drawablePadding"
        android:paddingRight="@dimen/fragment_logistics_btn_drawablePadding"
        android:text="@string/fragment_logistics_order_search"
        android:textColor="@color/goto_btn_textColor"
        android:textSize="@dimen/fragment_logistics_btn_textSize" />


    <TextView
        android:id="@+id/scanQRCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_logistics_btn_height"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_goto_btn"
        android:clickable="true"
        android:drawableEnd="@drawable/tab_logistics_selected"
        android:drawableLeft="@drawable/tab_logistics_selected"
        android:drawablePadding="@dimen/fragment_logistics_btn_drawablePadding"
        android:drawableRight="@drawable/tab_logistics_selected"
        android:drawableStart="@drawable/tab_logistics_selected"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_logistics_btn_drawablePadding"
        android:paddingRight="@dimen/fragment_logistics_btn_drawablePadding"
        android:text="@string/fragment_logistics_scan_QR_code"
        android:textColor="@color/goto_btn_textColor"
        android:textSize="@dimen/fragment_logistics_btn_textSize" />

</LinearLayout>