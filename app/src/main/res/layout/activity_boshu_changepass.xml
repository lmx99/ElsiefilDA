<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/boshu_backgroud_color2"
    android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/top_bar_normal_bg"
        android:gravity="center_vertical"
        >

        <include layout="@layout/commom_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改登录密码"
            android:textColor="#ffffff"
            android:textSize="18sp"
            />
    </RelativeLayout>
   <RelativeLayout
       android:layout_marginTop="20dp"
       android:background="@color/white"
       android:layout_width="match_parent"
       android:layout_height="45dp">
       <TextView
           android:textSize="18sp"
           android:layout_marginLeft="10dp"
           android:gravity="center_vertical"
           android:text="旧密码"
           android:layout_width="wrap_content"
           android:layout_height="45dp" />
       <EditText
           android:id="@+id/et_boshu_oldpass"
           android:background="#00000000"
           android:layout_marginLeft="75dp"
           android:hint="请输入旧密码"
           android:layout_width="match_parent"
           android:layout_height="45dp" />

   </RelativeLayout>
    <View
        android:layout_marginLeft="75dp"
        android:background="@color/boshu_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="新密码"
            android:layout_width="wrap_content"
            android:layout_height="45dp" />
        <EditText
            android:id="@+id/et_boshu_newPass"
            android:background="#00000000"
            android:layout_marginLeft="75dp"
            android:hint="请输入新密码"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </RelativeLayout>
    <View
        android:layout_marginLeft="75dp"
        android:background="@color/boshu_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <EditText
            android:id="@+id/et_boshu_newPassAgain"
            android:background="#00000000"
            android:layout_marginLeft="75dp"
            android:hint="请再次输入新密码"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </RelativeLayout>

    <View
        android:background="@color/boshu_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/bt_boshu_passCommit"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/circl_shape"
            android:text="完成"
            android:layout_width="280dp"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>
